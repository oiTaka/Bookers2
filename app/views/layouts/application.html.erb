<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header class="shadow-sm">
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
           <li class="nav-item p-2"><%= link_to (user_path(current_user.id)) do %><span class="fas fa-home text-light">Home</span><% end %></li>
           <li class="nav-item p-2"><%= link_to (users_path) do %><span class="fas fa-users text-light">Users</span><% end %></li>
           <li class="nav-item p-2"><%= link_to (books_path) do %><span class="fas fa-book-open text-light">Books</span><% end %></li>
           <li class="nav-item p-2"><%= link_to (destroy_user_session_path), method: :delete do %><span class="fas fa-sign-out-alt text-light">Log out</span><% end %></li>
         <% else %>
          <li class="nav-item p-2"><%= link_to (root_path) do %><span class="fas fa-home text-light">Home</span><% end %></li>
          <li class="nav-item p-2"><%= link_to (about_path) do %><span class="fas fa-link text-light">About</span><% end %></li>
          <li class="nav-item p-2"><%= link_to (new_user_registration_path) do %><span class="fas fa-user-plus text-light">Sign up</span><% end %></li>
          <li class="nav-item p-2"><%= link_to (new_user_session_path) do %><span class="fas fa-sign-in-alt text-light">Log in</span><% end %></li>
         <% end %>
         </ul>
        </div>
       </div>
      </nav>
    </header>
    <main>
      <% flash.each do |key, value| %>
       <%=content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
