
<div class="container">
 <div class="row">
  <%= render 'books/list', book: @new_book, user: @book.user %>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tboy>
     <tr>
      <td><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%><br /><%= link_to @book.user.name, user_path(@book.user) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user.id == current_user.id %>
       <td><%= link_to 'Edit', edit_book_path(@book) , class: 'btn btn-success' %></td>
       <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: '本当に消しますか' } , class: 'btn btn-danger' %></td>
      <% end %>
     </tr>
    </tboy>
   </table>
  </div>
 </div>
</div>