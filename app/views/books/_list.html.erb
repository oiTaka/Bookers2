<div class="col-md-3">
 <h2>User Info</h2>

 <div><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"%></div>
 <table class="table">
  <thead>
   <tr>
     <th>name</th>
     <th><%= user.name %></th>
   </tr>
  </thead>

  <thead>
   <tr>
     <th>introduction</th>
     <th><%= user.introduction %></th>
   </tr>
  </thead>
 </table>
 <div class="row">
  <%= link_to (edit_user_path(user)) , class: 'btn btn-outline-secondary btn-block' do %><span class="fas fa-user-cog text-secondary"></span><% end %>
 </div>

 <h2 class="mt-3">New book</h2>
 <%= form_with model: book, local:true do |f| %>
   <div class="form-group">
    <div class="field">
      <label for="book_title">Title</label><br />
      <%= f.text_field :title , class: 'form-control' %>
    </div>
   </div>
   <div class="form-group">
    <div class="area">
      <label for="book_body">Opinion</label><br />
      <%= f.text_area :body , class: 'form-control' %>
    </div>
   </div>
   <div class="form-group">
    <%= f.submit 'Create Book' , class: 'btn btn-success' %>
   </div>
 <% end %>
 </div>