
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <% if @user.errors.any? %>
    <div class="errors">
     <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    </div>
   <% end %>
   <%= form_with model: @user, local:true do |f| %>
     <div class="form-group">
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" , class: 'form-control' %>
     </div>
     <div class="form-group">
       <label for="inputImage">Image</label>
       <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
     </div>
     <div class="form-group">
       <label for="inputIntoroduction">Intoroduction</label>
       <%= f.text_area :introduction, autofocus: true, id:"inputIntoroduction", placeholder:"Introduction" , class: 'form-control' %>
     </div>
     <div class="form-group">
      <%= f.submit "Update User" , class: 'btn btn-secondary' %>
     </div>
   <% end %>
  </div>
 </div>
</div>